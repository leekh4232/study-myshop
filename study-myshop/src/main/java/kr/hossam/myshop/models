@startuml
skinparam dpi 200

package kr.hossam.myshop.controllers {
    class ControllerA {
        +ControllerA(param1: Type1)
        +methodA(param2: Type2): ReturnType
    }

    class ControllerB {
        +ControllerB(param1: Type1)
        +methodB(param2: Type2): ReturnType
    }

    class ServiceA {
        +ServiceA(param1: Type1)
        +methodC(param2: Type2): ReturnType
    }

    class ServiceB {
        +ServiceB(param1: Type1)
        +methodD(param2: Type2): ReturnType
    }

    ControllerA --|> ControllerB : IsA
    ControllerA --> ServiceA : HasA
    ControllerB --> ServiceB : HasA
}

@enduml